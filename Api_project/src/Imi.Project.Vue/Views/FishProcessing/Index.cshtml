<div class="container" id="container">
<div class="text-center">
    <h1 class="display-4">Verwerkingen van vis</h1>

</div>

<div id="app" class="row">

    <div class="col-md-12">
        <button class="btn btn-info" v-on:click.prevent="toEditMode(false)">Toevoegen</button>
    </div>
    <br />
    <br />

    <div class="row" v-if="!isEidtOrCreate" >
             <div class="col-md-5" style="margin-bottom:20px" v-for="processing in processings" >
                        <div class="card text-center">
                            <div class="card-body">
                              <h5 class="card-title" >{{processing.name}}</h5>
                               <button type="button" class="btn btn-warning"
                               v-on:click.prevent="toEditMode(true,processing)">Wijzigen</button>
                               <button type="button" class="btn btn-danger"
                               v-on:click.prevent="deleteClick(processing.id)">Verwijderen</button>
                            </div>
                      </div>
             </div>        
   </div>

   <div class="col-md-6">
        <div  v-if="currentProcessing">
              <div v-if="errors">
                <ul>
                  <li class="alert-danger" v-for="error in errors">{{ error }}</li>
                </ul>
              </div>             
            <div class="form-group">
                <h6>Naam</h6>
                <input class="form-control" v-model="currentProcessing.name"  />
            </div>
            <div class="btn-group">
                <button class="btn mr-4 btn-warning" v-on:click.prevent="saveProcessing">Opslaan</button>
                <button class="btn btn-primary"   v-on:click.prevent="cancel" >Annuleren</button>
            </div>
        </div>
    </div>
</div>
</div>

@section scripts{
   

    <script>
           const token = JSON.parse(sessionStorage.getItem("token"));
         let axiosConfig;
        if (token != null) {
            axiosConfig = { headers: { Authorization: `Bearer ${token.token}` } };
        }

        var app = new Vue({
            el: '#app',
            data: {
                processings: null,
                currentProcessing: null,
                isReadOnly: true,
                feedback: '',
                isEditMode: false,
                isEidtOrCreate:false,
                errors: null,
            },
            created: function () {
                let self = this;
                self.getProcessings();
            },
            methods: {
                getProcessings: function() {
                    let self = this;
                    axios.get('https://localhost:5001/api/FishProcessing',axiosConfig)
                        .then(response => (self.processings = response.data))
                        .catch(err => console.log(err));
                },

                
                toEditMode: function(isEditMode, processing) {
                    var self = this;
                    self.isEditMode = isEditMode;
                    self.isEidtOrCreate = true;
                    if (!self.isEditMode) {
                        self.currentProcessing = {
                            name: "",

                        }
                    } else {
                        self.currentProcessing = processing;
                    }

                },

                deleteClick: function(id) {
                    let self = this;

                    if (confirm(`Are you sure you want to delete fish processing with Id ${id} ?`)) {
                        axios.delete(`https://localhost:5001/api/FishProcessing/${id}`, axiosConfig)
                            .then(function(response) {
                                self.feedback = `Processing  with ID ${id} has been deleted`;
                                alert(self.feedback);
                                self.processings.forEach(function(processing, i) {
                                    if (processing.id === id) {
                                        self.processings.splice(i, 1);
                                    }

                                });
                            })
                            .catch(function(error) { alert(error.message); });
                    } 
            
                },
                cancel: function() {
                    let self = this;
                    self.isEidtOrCreate = false;
                    self.currentProcessing = null;
                    self.errors = null;
                },

                saveProcessing: function() {
                    let self = this;

                    if (self.isEditMode) {
                        let url = `https://localhost:5001/api/FishProcessing`;
                        axios.put(url, self.currentProcessing, axiosConfig)
                            .then(function(response) {
                                self.feedback = `Processing ${self.currentProcessing.name} with ID ${self.currentProcessing.id} has been modified`;
                                alert(self.feedback)
                                self.isEidtOrCreate = false;
                                self.currentProcessing = null;
                                self.feedback = null;
                                self.errors = null;
                            })
                            .catch(function(error) {
                                alert(error.message);
                                self.IsVaild();
                                return;
                            });
                            
                    }
                    else {
                        let url = `https://localhost:5001/api/FishProcessing`;
                        axios.post(url, self.currentProcessing, axiosConfig)
                            .then(function(response) {
                                self.currentProcessing = response.data;
                                self.processings.push(self.currentProcessing);
                                self.feedback = `Processing ${self.currentProcessing.name} with ID ${self.currentProcessing.id} has been created`;
                                alert(self.feedback)
                                self.isEidtOrCreate = false;
                                self.currentProcessing = null;
                                self.feedback = null;
                                self.errors = null;
                            })
                            .catch(function(error) {
                                alert(error.message);
                                self.IsVaild();
                                return;
                            });
                            
                    }

                },
                IsVaild: function() {
                    let self=this;
                     if (self.currentProcessing.name === "") {
                         self.errors = [];
                       self.errors.push('Name is verplicht ');
                     }
                }

            }
        });
    </script>
}
