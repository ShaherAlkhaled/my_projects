
@model ProductsCreateUpdateViewModel

<h2>Add new Product</h2>

    <div>
        <form asp-action="Create"  asp-controller="Products" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <partial name="_ProductsFormPartial" model="@Model" />

            <div class="form-group">
                 <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
<br />
<a asp-action="ShowProducts" asp-controller="Products" class="btn btn-outline-primary">&#9204;Back</a>

