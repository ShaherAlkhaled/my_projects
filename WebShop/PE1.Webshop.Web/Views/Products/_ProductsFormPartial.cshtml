
@model ProductsCreateUpdateViewModel
    <div class="form-group">
        <label asp-for="Name" ></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Brand"></label>
        <input asp-for="Brand" class="form-control" />
        <span asp-validation-for="Brand" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Model"></label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control"/>
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
        <div class="form-group">
        <label asp-for="Rating"></label>
        <input asp-for="Rating" class="form-control"/>
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Image"></label>
        <input asp-for="Image" class="form-control">
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SelectedItem"></label>
        <span asp-validation-for="SelectedItem"></span>
        <select asp-for="SelectedItem" class="form-control" asp-items="@Model.Items"></select>
        <span asp-validation-for="SelectedItem" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Properties"></label>
        @for (int i = 0; i < Model.Properties.Count(); i++)
        {
            <div class="form-check">
                <input class="form-check-input" asp-for="@Model.Properties[i].IsSelected" />
                <label class="form-check-label" asp-for="@Model.Properties[i].IsSelected">
                    @Model.Properties[i].Name
                </label>
                <input asp-for="@Model.Properties[i].Id" />
                <input asp-for="@Model.Properties[i].Name" />
            </div>
        }
    </div>
